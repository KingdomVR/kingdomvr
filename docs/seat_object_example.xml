<?xml version="1.0"?>
<!-- 
Example XML script for a seat object.

To create a seat object:
1. Create a new world object in the game/editor
2. Set the scale to make it squashed (e.g., scale: x=1, y=0.2, z=1 for a flat seat)
3. Add this XML script to the object's script field
4. The object will automatically render as a transparent cube
5. Users can press 'E' to sit on the object
-->
<script>
	<seat>
		<!-- Define at least one seat position where users will sit -->
		<seat_position>
			<!-- Position in object/model space where the avatar will be seated -->
			<pos>0 0 0</pos>
			
			<!-- Optional: Rotation angles for the seated pose (all in radians) -->
			<!-- Default values shown - adjust as needed for your desired sitting pose -->
			<upper_body_rot_angle>0.0</upper_body_rot_angle>
			
			<!-- Leg positioning -->
			<upper_leg_rot_angle>1.5708</upper_leg_rot_angle>  <!-- Ï€/2 radians = 90 degrees, legs bent -->
			<upper_leg_rot_around_thigh_bone_angle>0.0</upper_leg_rot_around_thigh_bone_angle>
			<upper_leg_apart_angle>0.1</upper_leg_apart_angle>
			<lower_leg_rot_angle>0.0</lower_leg_rot_angle>
			<lower_leg_apart_angle>0.0</lower_leg_apart_angle>
			<rotate_foot_out_angle>0.0</rotate_foot_out_angle>
			
			<!-- Arm positioning -->
			<arm_down_angle>0.5</arm_down_angle>
			<arm_out_angle>0.1</arm_out_angle>
			<upper_arm_shoulder_lift_angle>0.0</upper_arm_shoulder_lift_angle>
			<lower_arm_up_angle>0.0</lower_arm_up_angle>
			
			<!-- Optional: Hand hold points in object space for IK (if holding armrests, etc.) -->
			<left_hand_hold_point_os>-0.3 0 0</left_hand_hold_point_os>
			<right_hand_hold_point_os>0.3 0 0</right_hand_hold_point_os>
		</seat_position>
		
		<!-- Optional: Add more seat_position elements for multi-seat objects like benches -->
		
		<!-- Optional: Model space rotations (usually not needed for simple seats) -->
		<!-- <model_to_y_forwards_rot_1>0 0 0 1</model_to_y_forwards_rot_1> -->
		<!-- <model_to_y_forwards_rot_2>0 0 0 1</model_to_y_forwards_rot_2> -->
	</seat>
</script>
